<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Szabadság Igénylés</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1>Szabadság Igénylés</h1>
    <form method="POST" action="/leave-request">
      <% if (errors && errors.length > 0) { %>
        <div class="alert alert-danger">
          <ul>
            <% errors.forEach(function(error) { %>
              <li><%= error %></li>
            <% }); %>
          </ul>
        </div>
      <% } %>
      <div class="form-group">
        <label for="name">Név</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= data ? data.name : '' %>">
      </div>
      <div class="form-group">
        <label for="startDate">Kezdő dátum</label>
        <input type="date" class="form-control" id="startDate" name="startDate" value="<%= data ? data.startDate : '' %>">
      </div>
      <div class="form-group">
        <label for="endDate">Vég dátum</label>
        <input type="date" class="form-control" id="endDate" name="endDate" value="<%= data ? data.endDate : '' %>">
      </div>
      <div class="form-group">
        <label for="isPaidLeave">Fizetett szabadság</label>
        <input type="checkbox" id="isPaidLeave" name="isPaidLeave" <%= data && data.isPaidLeave ? 'checked' : '' %>>
      </div>
      <div class="form-group">
        <label for="employeeId">Alkalmazott azonosító</label>
        <input type="text" class="form-control" id="employeeId" name="employeeId" value="<%= data ? data.employeeId : '' %>">
      </div>
      <div class="form-group">
        <label for="reason">Indoklás</label>
        <textarea class="form-control" id="reason" name="reason"><%= data ? data.reason : '' %></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Igénylés</button>
    </form>
  </div>
</body>
</html>